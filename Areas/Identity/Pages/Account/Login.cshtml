@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<div class="fondo">
<div class="row">


<form class="formulario" id="account" method="post">
    <br>
    <h1 >Login</h1>
    <div class="contenedor">     
         <div class="input-contenedor">
         <i class="fas fa-envelope icon"></i>
         <input asp-for="Input.Email" type="text" placeholder="Introduce tu correo">
         </div>
         
         <div class="input-contenedor">
        <i class="fas fa-key icon"></i>
         <input asp-for="Input.Password" type="password" placeholder="Introduce tu contraseña">
        </div>

         <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
        </div>

         <input type="submit" value="Login" class="button">
         <p>Da click en Login para logearte a nuestra libreria</p>
         <p>¿No tienes una cuenta? <a class="link" href="#">Registrate </a></p>
     </div>
    </form>





    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
