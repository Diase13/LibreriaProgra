<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="~/lib/icofont/icofont.min.css" rel="stylesheet">
    <link href="~/lib/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/lib/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/venobox/venobox.css" rel="stylesheet">
    <link href="~/lib/aos/aos.css" rel="stylesheet">
</head>
<body>
  <header id="header">
    <div class="container d-flex align-items-center">
      <div class="logo mr-auto">
        <h1 class="text-light"><a asp-controller="Home" asp-action="Index">The One<span>.</span></a></h1>
      </div>
      <nav class="nav-menu d-none d-lg-block">
        <ul>
          <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
          <li><a asp-controller="Conocenos" asp-action="Index">Conocenos</a></li>
          <li><a asp-controller="Catalogo" asp-action="Index">Catalogo de Libros</a></li>
          <li><a asp-controller="Contactenos" asp-action="Index">Contactenos</a></li>
          <li><a asp-controller="Home" asp-action="Index">Ofertas y Promociones</a></li>         
          <li><a asp-controller="Home" asp-action="Index">Novedades</a>  </li>
          <li><a asp-controller="Carrito" asp-action="Index">Carrito</a></li>
          <li><a href="#">Registrate</a></li>
          <li class="#"><a href="#about">Login</a></li>
        </ul>
      </nav>
    </div>
  </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery.easing/jquery.easing.min.js"></script>
    <script src="~/lib/php-email-form/validate.js"></script>
    <script src="~/lib/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/lib/owl.carousel/owl.carousel.min.js"></script>
    <script src="~/lib/venobox/venobox.min.js"></script>
    <script src="~/lib/aos/aos.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    
</body>
</html>
