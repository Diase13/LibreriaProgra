@{
    ViewData["Title"] = "Hecho por Veronica Varas";
}

<div class="row">
    <div class="col-md-4">  
        <h1 class="display-4">Bono</h1>
        <form asp-controller="CARRITO DE COMPRAS" asp-action="Confirmar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-bordered">
                 <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Handle</th>
                    </tr>
                 </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>@fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td colspan="2">Larry the Bird</td>
                        <td>@twitter</td>
                    </tr>
                </tbody>
            </table>
            <div class="form-group">
                 <button type="submit" class="btn btn-outline-primary">Confirmar</button> 
            </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Response)</td>    
    
    </div>
</div>